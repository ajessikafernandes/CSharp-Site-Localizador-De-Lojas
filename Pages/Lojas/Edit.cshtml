@page
@model LojasCRUD.Pages.Lojas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2><strong>Editar Cadastro | Administrador </strong></h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Loja.Id" />
            <div class="form-group">
                <label asp-for="Loja.razaoSocial" class="control-label"></label>
                <input asp-for="Loja.razaoSocial" class="form-control" />
                <span asp-validation-for="Loja.razaoSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loja.email" class="control-label"></label>
                <input asp-for="Loja.email" class="form-control" />
                <span asp-validation-for="Loja.email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loja.logradouro" class="control-label"></label>
                <input asp-for="Loja.logradouro" class="form-control" />
                <span asp-validation-for="Loja.logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loja.bairro" class="control-label"></label>
                <input asp-for="Loja.bairro" class="form-control" />
                <span asp-validation-for="Loja.bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loja.cidade" class="control-label"></label>
                <input asp-for="Loja.cidade" class="form-control" />
                <span asp-validation-for="Loja.cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loja.cep" class="control-label"></label>
                <input asp-for="Loja.cep" class="form-control" />
                <span asp-validation-for="Loja.cep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loja.uf" class="control-label"></label>
                <input asp-for="Loja.uf" class="form-control" />
                <span asp-validation-for="Loja.uf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loja.Latitude" class="control-label"></label>
                <input asp-for="Loja.Latitude" class="form-control" />
                <span asp-validation-for="Loja.Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loja.Longitude" class="control-label"></label>
                <input asp-for="Loja.Longitude" class="form-control" />
                <span asp-validation-for="Loja.Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
                <button type="button" class="btn btn-default"><a asp-page="./Index" > Voltar a Lista </a></button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
